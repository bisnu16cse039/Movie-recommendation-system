# Movie Recommendation System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_DEFAULT_REGION=us-east-1

# S3 Bucket for Model Artifacts
S3_BUCKET_NAME=movie-recsys-models-prod
S3_MODEL_PREFIX=models/

# Application Configuration
RECSYS_ENVIRONMENT=production
RECSYS_MODEL__VERSION=v1.0.0

# API Configuration
RECSYS_API__HOST=0.0.0.0
RECSYS_API__PORT=8000
RECSYS_API__WORKERS=4
RECSYS_API__RELOAD=false
RECSYS_LOGGING__LEVEL=INFO

# CORS Configuration
RECSYS_CORS__ORIGINS=["https://yourdomain.com"]
RECSYS_CORS__ALLOW_CREDENTIALS=true

# Cache & Performance
RECSYS_CACHE__ENABLED=true
RECSYS_CACHE__TTL_SECONDS=3600
RECSYS_CACHE__MAX_SIZE=100

# Rate Limiting
RECSYS_RATE_LIMIT__ENABLED=true
RECSYS_RATE_LIMIT__REQUESTS_PER_MINUTE=60

# ECR Repository URIs (update after creation)
ECR_API_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/movie-recsys/api
ECR_TRAINING_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/movie-recsys/training
ECR_RETRAINING_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/movie-recsys/retraining